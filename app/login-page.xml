<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Login">
            <NavigationButton
                text="Go Back"
                android.systemIcon="ic_menu_back"
                tap="goBack"/>
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-30">
        <Image
            src="~/images/ns-logo.png"
            width="200"
            height="200"
            style="margin: 100px 0"
        />

        <TextField
            class="input"
            text="{{ username }}"
            hint="Username"
            autocorrect="false"
            autocapitalizationType="none"
            returnKeyType="next" />

        <TextField
            class="input"
            text="{{ password }}"
            hint="Password"
            secure="true"
            returnKeyType="done" />

        <Button
            text="Sign in"
            class="btn btn-primary"
            style="margin: 80px 0"
        />

    </StackLayout>

</Page>
